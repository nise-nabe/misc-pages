 $ sudo apt-get install -y git-core build-essential scons
 $ sudo apt-get install -y libboost-dev libboost-program-options-dev libboost-thread-dev libboost-filesystem-dev
 $ git clone git://github.com/mongodb/mongo.git
 $ cd mongo
 $ scons all
# mongodb のビルドって結構時間かかるんだなぁ 
 $ scons --prefix=/path/to/install/mongo install
 $ echo "PATH=$PATH:/path/to/install/mongo" >> ~/.zshrc 
 $ source ~/.zshrc
 $ mongod --dbpath=/path/to/datastore
